<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" name="StockSim" packages="">
   <Appenders>
      <File name="StockSimLog" fileName="${sys:catalina.home}/logs/StockSim.log">
         <PatternLayout>
            <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
         </PatternLayout>
      </File>
   </Appenders>
   <Loggers>
      <Root level="debug">
         <AppenderRef ref="StockSimLog"/>
      </Root>
   </Loggers>
</Configuration>
